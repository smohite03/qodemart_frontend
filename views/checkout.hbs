<!DOCTYPE html>
<html lang="en">

<head>
    {{>front_styles}}
    <title>Qodemart - Checkout</title>
</head>

<body onload="checkoutOrder();">
    <!-- Navbar Start -->
    {{>navbar}}
    <!-- Navbar End -->


    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">Checkout</h1>
            <div class="d-inline-flex">
                <p class="m-0"><a href="">Home</a></p>
                <p class="m-0 px-2">-</p>
                <p class="m-0">Checkout</p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->


    <!-- Checkout Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <div class="mb-4">
                    <h4 class="font-weight-semi-bold mb-4">Customer Details</h4>
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Full name</label>
                            <input class="form-control" id="name" type="text" placeholder="John" readonly>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>E-mail</label>
                            <input class="form-control" id="email" type="text" placeholder="example@email.com" readonly>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Mobile No</label>
                            <input class="form-control" id="phone" type="text" placeholder="+123 456 789" readonly>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Address</label>
                            <input class="form-control" id="address" type="text" placeholder="123 Street" readonly>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>City</label>
                            <input class="form-control" id="city" type="text" placeholder="New York" readonly>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>State</label>
                            <input class="form-control" id="state" type="text" placeholder="New York" readonly>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Pincode</label>
                            <input class="form-control" id="pincode" type="text" placeholder="123" readonly>
                        </div>
                    </div>
                     <div class="row">
                        <div class="col-md-12 form-group">
                            <label><b>Order Discription</b></label>
                            <textarea class="form-control" id="discription" type="text" placeholder="Anything You Want To Add"></textarea> 
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Order Total</h4>
                    </div>
                    <div class="card-body">
                        <h5 class="font-weight-medium mb-3">Products</h5>
                        <div id="cartvalues"></div>
                    </div>
                    <div class="card-footer border-secondary bg-transparent">
                        <div class="d-flex justify-content-between mt-2">
                            <h5 class="font-weight-bold">Total</h5>
                            <h5 class="font-weight-bold" id="total"></h5>
                            <input type="text" id="totalamt" hidden>
                        </div>
                    </div>
                </div>
                <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Payment</h4>
                    </div>
                    <div class="card-footer border-secondary bg-transparent">
                        <button class="btn btn-lg btn-block btn-primary font-weight-bold my-3 py-3" onclick="createRazorOrder();">Place Order</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Checkout End -->


    <!-- Footer Start -->
    {{>footer}}
    <!-- Footer End -->

    <!-- JavaScript Libraries -->
    {{>front_scripts}}
    {{>admin_scripts}}
</body>

</html>