<!DOCTYPE html>
<html lang="en">

<head>

    {{>admin_style}}
    <title>Qodemart - Orders</title>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {{>customer_sidebar}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {{>admin_top_bar}}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Orders</h1>
                    <p class="mb-4">I love shopping. There is a little bit of magic found in buying something new. It is instant gratification, a quick fix.</p>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">All Orders at one place</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Order ID</th>
                                            <th>Customer Name</th>
                                            <th>Ordered On</th>
                                            <th>Estm Delivery</th>
                                            <th>Status</th>
                                            <th>Action / Operation</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Order ID</th>
                                            <th>Customer Name</th>
                                            <th>Ordered On</th>
                                            <th>Estm Delivery</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        <tr>
                                            <td>1001</td>
                                            <td>Shashwat</td>
                                            <td>23/03/2001</td>
                                            <td>30/03/2001</td>
                                            <td><button class="btn btn-sm btn-warning">In Transit</button></td>
                                            <td><a href="#" data-toggle="modal" data-target="#queryModal" class="d-none d-sm-inline-block btn btn-sm btn-dark shadow-sm">Query</a> <button class="btn btn-success btn-sm">View</button> <button class="btn btn-danger btn-sm">Cancel</button></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            {{>admin_footer}}
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scripts Start -->
    {{>admin_scripts}}
    <!-- Scripts End -->
    <div class="modal fade" id="queryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Raise a new Query</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class=" mr-auto w-100 navbar-search">
                            <label>Query</label>
                            <select type="text" class="form-control bg-light border-0 small"
                                placeholder="Order">
                                <option value="Doesn't look good on me">Doesn't look good on me</option>
                                <option value="Doesn't like the product">Doesn't like the product</option>
                                <option value="Product quality is poor">Product quality is poor</option>
                                <option value="Recived a defective product">Recived a defective product</option>
                                <option value="Recived a different product">Recived a different product</option>
                            </select><br>
                            <label>Want To</label>
                            <select type="text" class="form-control bg-light border-0 small"
                                placeholder="Order">
                                <option value="Refund">Refund / Return</option>
                                <option value="Replace">Replace</option>
                            </select>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <button class="btn btn-info" onclick="submitQuery();">Submit</button>
                </div>
            </div>
        </div>
    </div>


</body>

</html>