<!DOCTYPE html>
<html lang="en">

<head>

    {{>admin_style}}
    <title>Qodemart - Orders</title>

</head>

<body id="page-top" onload="getOrderbyCustomer();">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {{>customer_sidebar}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {{>admin_top_bar}}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Orders</h1>
                    <p class="mb-4">I love shopping. There is a little bit of magic found in buying something new. It is instant gratification, a quick fix.</p>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">All Orders at one place</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Order ID</th>
                                            <th>Order Discription</th>
                                            <th>Ordered On</th>
                                            <th>Estm Delivery</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Order ID</th>
                                            <th>Customer Name</th>
                                            <th>Ordered On</th>
                                            <th>Estm Delivery</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody id="orderCustomer">
                                        <tr>
                                            <td>1001</td>
                                            <td>Shashwat</td>
                                            <td>23/03/2001</td>
                                            <td>30/03/2001</td>
                                            <td><button class="btn btn-sm btn-warning">In Transit</button></td>
                                            <td><button class="btn btn-success btn-sm">View</button> <button class="btn btn-danger btn-sm">Cancel</button></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            {{>admin_footer}}
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scripts Start -->
    {{>admin_scripts}}
    <!-- Scripts End -->
    <!-- Logout Modal-->
    <div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Items Of the Order</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Sno</th>
                                <th>Product Name</th>
                                <th>Product Category</th>
                                <th>Product Rate</th>
                                <th>Product Quantity</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Sno</th>
                                <th>Product Name</th>
                                <th>Product Category</th>
                                <th>Product Rate</th>
                                <th>Product Quantity</th>
                                <th>Total</th>
                            </tr>
                        </tfoot>
                        <tbody id="orderProduct">
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

</body>

</html>