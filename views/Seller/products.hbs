<!DOCTYPE html>
<html lang="en">

<head>

    {{>admin_style}}
    <title>Qodemart - Products</title>

</head>

<body id="page-top" onload="showAllproduct();">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        {{>seller_sidebar}}
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {{>seller_top_bar}}
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Products</h1>
                        <a href="#" data-toggle="modal" data-target="#queryProduct" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                                class="fas fa-plus fa-sm text-white-50"></i> Add New Product</a>
                    </div>
                    <p class="mb-4">People don't buy products, they buy the feelings that products give them.</p>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Product ID</th>
                                            <th>Product Name</th>
                                            <th>Product Rate</th>
                                            <th>Product Category</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Product ID</th>
                                            <th>Product Name</th>
                                            <th>Product Rate</th>
                                            <th>Product Category</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody id="productSeller">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            {{>admin_footer}}
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scripts Start -->
    {{>admin_scripts}}
    <!-- Scripts End -->

    <div class="modal fade" id="queryProduct" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New Product</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                <form class=" mr-auto w-100 navbar-search">
                        <label>Product Name</label>
                        <input type="text" class="form-control bg-light border-0 small"
                            placeholder="Eg- Shoes"><br>
                        <label>Product Rate</label>
                        <input type="text" class="form-control bg-light border-0 small"
                            placeholder="Rate"><br>
                        <label>Product Category</label>
                        <select type="text" class="form-control bg-light border-0 small">
                            <option value="Men's Fasion">Men's Fasion</option>
                            <option value="Women's Fasion">Women's Fasion</option>
                            <option value="Kitchen">Home & Kitchen</option>
                            <option value="Electronics">Electronics</option>
                            <option value="Toys">Toys</option>
                            <option value="Food">Food & Beverages</option>
                        </select><br>
                        <label>Product Images</label>
                        <input type="file" class="form-control bg-light border-0 small"
                            placeholder="Quantity"><br>
                        <label>Product Description</label>
                        <textarea type="text" class="form-control bg-light border-0 small"
                            placeholder="Description"></textarea> 
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <button class="btn btn-primary" onclick="submitProduct();">Submit</button>
            </div>
        </div>
    </div>
</div>

</body>

</html>